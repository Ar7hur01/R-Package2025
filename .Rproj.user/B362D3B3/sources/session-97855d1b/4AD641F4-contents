erster <- data.frame(Ort="Standort_1", Spalte_1=runif(100)*100, Spalte_2=runif(100),  wert=rnorm(100,2,1),Alphabet=rep(LETTERS,100)[1:100])
erster
zweiter <- data.frame(Ort="Standort_2", Spalte_1=runif(50)*70, Spalte_2=runif(100), wert=rev(rnorm(100,2,1)),Alphabet=rev(rep(LETTERS,110)[1:100]))
zweiter
beide <- rbind(erster, zweiter)
beide

#plotten <- beide[66:70, c("Ort","Spalte_1","Spalte_2")]
head(gapminder)
names(gapminder)

plot(beide$Spalte_1, beide$Spalte_2, 
     xlab = "NDVI", 
     ylab = "SRTM", 
     main = "Spalte 1 vs Spalte 2", 
     col = "blue", 
     pch = 15)


p <- ggplot(data=beide) + geom_point(data=beide,aes(Spalte_1, Spalte_2, color=Ort),alpha=0.6) + geom_text(x=50, y=0.5,aes(label="Random pattern"), size=10, color="red") 
p
p + transition_time(beide$Spalte_1)


